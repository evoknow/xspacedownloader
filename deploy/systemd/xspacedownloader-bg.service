[Unit]
Description=XSpace Downloader Background Downloader
After=network.target mysql.service
Wants=mysql.service

[Service]
Type=exec
User=nginx
Group=nginx
WorkingDirectory=/var/www/production/xspacedowoad.com/website/htdocs
Environment="PATH=/var/www/production/xspacedowoad.com/website/htdocs/venv/bin:/usr/local/bin:/usr/bin:/bin"
Environment="PYTHONPATH=/var/www/production/xspacedowoad.com/website/htdocs"
ExecStart=/var/www/production/xspacedowoad.com/website/htdocs/venv/bin/python /var/www/production/xspacedowoad.com/website/htdocs/bg_downloader.py
Restart=always
RestartSec=10

# Allow access to needed directories
ReadWritePaths=/var/www/production/xspacedowoad.com/website/htdocs/downloads
ReadWritePaths=/var/www/production/xspacedowoad.com/website/htdocs/logs

# Logging
StandardOutput=append:/var/www/production/xspacedowoad.com/website/htdocs/logs/bg-downloader.log
StandardError=append:/var/www/production/xspacedowoad.com/website/htdocs/logs/bg-downloader-error.log

[Install]
WantedBy=multi-user.target